{
  "name": "tslint-config-sevenval",
  "version": "0.0.1",
  "description": "A sane TSLint configuration for TypeScript",
  "main": "src/index.json",
  "author": "Marvin Hagemeister <marvin.hagemeister@sevenval.com>",
  "license": "MIT",
  "scripts": {
    "lint": "tslint 'src/**/!(invalid).ts'",
    "test": "mocha --compilers ts:ts-node/register 'src/**/__tests__/*.spec.ts'",
    "test-watch": "npm t -- -w -R min --watch-extensions json,ts,tsx",
    "prepublish": "npm run lint && npm t"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^3.5.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.13",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "rimraf": "^2.6.1",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.2.2"
  }
}
